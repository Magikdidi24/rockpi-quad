#!/bin/bash -e
checkReboot() {
  echo Installation will take effect after reboot!!!
}
is_armbian() {
  if [ -f /boot/armbianEnv.txt ] || [ -f /boot/dietpiEnv.txt ]; then
    echo true
  else
    echo false
  fi
}
armbian_require_overlay() {
  envFile='/boot/armbianEnv.txt'
  [ -f /boot/dietpiEnv.txt ] && envFile='/boot/dietpiEnv.txt'
  overlays=$(grep '^overlays=' "$envFile" | cut -d'=' -f2)
  for arg in "$@"; do
    if grep -qE "(^|[[:space:]])$arg([[:space:]]|$)" <<< $overlays; then
      echo "Overlay ${arg} was already added to $envFile, skip..."
    else
      overlays="${overlays} ${arg}"
      echo "Added overlay: $arg"
    fi
  done
  if grep -q "^overlays=" $envFile; then
    sed -i '/^overlays=/c\'"overlays=$overlays" $envFile
  else
    echo "overlays=$overlays" >> $envFile
  fi
}

# Set up Python virtual environment for rockpi-quad
VENV_PATH="/opt/rockpi-quad"
REQUIREMENTS_PATH="/usr/bin/rockpi-quad/requirements.txt"

# Create opt directory and copy files there
mkdir -p /opt/rockpi-quad
cp -r /usr/bin/rockpi-quad/* /opt/rockpi-quad/

# Update requirements path to the copied location
REQUIREMENTS_PATH="/opt/rockpi-quad/requirements.txt"

# Create venv with system site packages to access gpiod
python3 -m venv "$VENV_PATH/venv" --system-site-packages

# Upgrade pip in the venv and install requirements
"$VENV_PATH/venv/bin/pip" install --upgrade pip
if [ "$("$VENV_PATH/venv/bin/python3" -c 'import sys; print(f"{sys.version_info.minor >= 11}")')" = "True" ]; then
  "$VENV_PATH/venv/bin/pip" install -r "$REQUIREMENTS_PATH" --break-system-packages
else
  "$VENV_PATH/venv/bin/pip" install -r "$REQUIREMENTS_PATH"
fi

systemctl enable rockpi-quad.service

model=$(tr -d '\0' </proc/device-tree/model)
case "$model" in
*"Raspberry Pi 4"*)
  raspi-config nonint do_i2c 0
  # Determine correct config.txt location (varies by Raspberry Pi OS version)
  CONFIG_TXT="/boot/config.txt"
  if [ -f /boot/firmware/config.txt ]; then
    CONFIG_TXT="/boot/firmware/config.txt"
  fi
  # Add PWM overlay if not already present
  if ! grep -q "dtoverlay=pwm-2chan,pin=12,func=4,pin2=13,func2=4" "$CONFIG_TXT"; then
    echo "dtoverlay=pwm-2chan,pin=12,func=4,pin2=13,func2=4" >> "$CONFIG_TXT"
  fi
  cp /opt/rockpi-quad/env/rpi4.env /etc/rockpi-quad.env
  checkReboot
  ;;
*"Radxa ROCK 4C+"*)
  if [ "$(is_armbian)" = "true" ]; then
    armbian_require_overlay rk3399-i2c7
    cp /opt/rockpi-quad/env/rock_pi_4_armbian.env /etc/rockpi-quad.env
  else
    mv /boot/dtbo/rk3399-i2c7.dtbo.disabled /boot/dtbo/rk3399-i2c7.dtbo || true
    cp /opt/rockpi-quad/env/rock_pi_4.env /etc/rockpi-quad.env
    u-boot-update || true
  fi
  checkReboot
  ;;
*)
  echo Not support in your board.
  exit 2
  ;;
esac